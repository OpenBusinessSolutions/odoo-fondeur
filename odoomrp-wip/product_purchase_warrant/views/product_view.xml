<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="supplier_warrant_form_view">
            <field name="name">Supplier Warrant Form</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
            <field name="arch" type="xml">
                <field name="min_qty" position="after">
                    <field name="warrant_months" /> months
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="supplier_warrant_tree_view">
            <field name="name">Supplier Warrant Tree</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view" />
            <field name="arch" type="xml">
                <field name="min_qty" position="after">
                    <field name="warrant_months" />
                </field>
            </field>
        </record>
    </data>
</openerp>
