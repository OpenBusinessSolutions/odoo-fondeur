        <record model="ir.ui.view" id="view_task_tree2">
            <field name="name">Project Task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="progress" position="before">
                    <field name="balance_amount" sum="Total"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_task_form2">
            <field name="name">Project Task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <page string="Extra Info" position="before">
                    <page string="Price and Payments">
                        <group>
                            <group>
                                <field name="total_amount"/>
                                <field name="payment_term_id"/>
                            </group>
                            <group>
                                <field name="balance_amount"/>
                            </group>
                            <field name="payment_ids" colspan="4">
                                <tree editable="top">
                                    <field name="date"/>
                                    <field name="description"/>
                                    <field name="amount" sum="Total Paid"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>


    </data>
